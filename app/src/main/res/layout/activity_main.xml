<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/main_activity_meizi_im"
        android:contentDescription="@string/main_img_des"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="47dp"
        app:layout_constraintBottom_toTopOf="@+id/main_meizi_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/holo_green_dark" />

    <Button
        android:id="@+id/main_meizi_btn"
        android:layout_width="163dp"
        android:layout_height="62dp"
        android:layout_marginStart="97dp"
        android:layout_marginBottom="53dp"
        android:contentDescription="@string/main_meizi_btn_des"
        android:text="@string/main_meizi_btn_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_meizi_im" />
</android.support.constraint.ConstraintLayout>